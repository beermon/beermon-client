<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
      android:layout_height="fill_parent" >

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="#FFFFFF">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:contentDescription="Carson Brown"
                    android:maxHeight="80dip"
                    android:maxWidth="80dip"
                    android:src="@drawable/ic_carson" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="5dip"
                    android:contentDescription="Chris Saunders"
                    android:maxHeight="80dip"
                    android:maxWidth="80dip"
                    android:src="@drawable/ic_chris" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="5dip"
                    android:contentDescription="Aaron Olson"
                    android:maxHeight="80dip"
                    android:maxWidth="80dip"
                    android:src="@drawable/ic_aaron" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="5dip"
                    android:contentDescription="Laura Larcher"
                    android:maxHeight="80dip"
                    android:maxWidth="80dip"
                    android:src="@drawable/ic_laura" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="5dip"
                    android:contentDescription="Lydia Krupp-Hunter"
                    android:maxHeight="80dip"
                    android:maxWidth="80dip"
                    android:src="@drawable/ic_lydia" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginLeft="5dip"
                    android:contentDescription="Samuel Kadolph"
                    android:maxHeight="80dip"
                    android:maxWidth="80dip"
                    android:src="@drawable/ic_sam" />

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beermon was made with lots of love and thirst for beer. If you any questions or comments, please submit them in the form of Unicoins!"
                android:textSize="16dip"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:textColor="#333333"/>

    </LinearLayout>

</ScrollView>