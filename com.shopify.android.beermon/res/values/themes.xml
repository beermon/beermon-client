<resources>
    <style name="KegTagText">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="KegTagTextHeading" parent="KegTagText">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">18dp</item>
    </style>
    <style name="KegTagTextHeadingLarge" parent="KegTagTextHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    <style name="KegTagDateText" parent="KegTagText">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:shadowColor">#666666</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BeermonApp" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/BeermonActionBar</item>
    </style>
    <style name="BeermonActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#2e1f30</item>
        <item name="android:displayOptions">disableHome|showCustom</item>
        <item name="android:customNavigationLayout">@layout/action_bar_home_icon_default</item>
    </style>
</resources>